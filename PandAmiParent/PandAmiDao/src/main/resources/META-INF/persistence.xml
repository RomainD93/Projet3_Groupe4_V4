<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="PUPandAmi"
		transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/PandamiDS</jta-data-source>
<!-- 		<class>fr.eql.ai108.projet3.entity.Adresse</class> -->
		<class>fr.eql.ai108.projet3.entity.CategorieAide</class>
		<class>fr.eql.ai108.projet3.entity.Disponibilite</class>
		<class>fr.eql.ai108.projet3.entity.Genre</class>
		<class>fr.eql.ai108.projet3.entity.JourSemaine</class>
		<class>fr.eql.ai108.projet3.entity.Litige</class>
		<class>fr.eql.ai108.projet3.entity.Materiel</class>
		<class>fr.eql.ai108.projet3.entity.Negociation</class>
		<class>fr.eql.ai108.projet3.entity.PreferenceAide</class>
		<class>fr.eql.ai108.projet3.entity.PreferenceVille</class>
		<class>fr.eql.ai108.projet3.entity.ReponseService</class>
		<class>fr.eql.ai108.projet3.entity.Service</class>
		<class>fr.eql.ai108.projet3.entity.Suspension</class>
		<class>fr.eql.ai108.projet3.entity.TypeAide</class>
		<class>fr.eql.ai108.projet3.entity.TypeLitige</class>
		<class>fr.eql.ai108.projet3.entity.TypeUtilisateur</class>
		<class>fr.eql.ai108.projet3.entity.Utilisateur</class>
		<class>fr.eql.ai108.projet3.entity.Ville</class>
		<properties>
			<property name="hibernate-dialect"
				value="org.hibernate.dialect.MySQL5InnoDBDialect" />
<!-- 			<property name="hibernate.show_sql" value="true" />  -->
			<property
				name="javax.persistence.schema-generation.database.action"
				value="drop-and-create" />
			<property name="javax.persistence.sql-load-script-source" 
				value="import.sql" /> 
		</properties>
	</persistence-unit>
</persistence>
